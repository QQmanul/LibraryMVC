@model Book

@{
    ViewData["Title"] = "Редактирование оглавления";
}

<h1>Редактирование оглавления</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ContentsXml" class="control-label"></label>
        <textarea asp-for="ContentsXml" id="editor" class="form-control" rows="10"></textarea>
        <span asp-validation-for="ContentsXml" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'), {
                height: 400
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}
